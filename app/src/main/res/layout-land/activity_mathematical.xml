<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityTextLayout"
    tools:context="com.google.android.gms.example.exercisesforthebrain.MathematicalActivity">

    <ImageView
        android:id="@+id/imageViewBarId"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/horizontalimageforapp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/textViewSubtitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:focusable="true"
        android:nextFocusDown="@+id/textViewDescriptionExerId"
        android:nextFocusLeft="@+id/textViewDescriptionExerId"
        android:nextFocusRight="@+id/textViewDescriptionExerId"
        android:text="@string/subtitle"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBarId"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTestStartAlphaId"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:elevation="4dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/textViewDescriptionExerId"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:focusable="true"
        android:nextFocusDown="@+id/textViewMathQuestionId"
        android:nextFocusLeft="@+id/buttonStartId"
        android:nextFocusRight="@+id/buttonStartId"
        android:nextFocusUp="@+id/textViewSubtitleId"
        android:paddingEnd="@dimen/titleAppBottMar"
        android:paddingStart="@dimen/titleAppBottMar"
        android:text="@string/descriptionTestMathematical"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBarId" />

    <TextView
        android:id="@+id/textViewMathQuestionId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:focusable="true"
        android:nextFocusDown="@+id/floatingActionButton1"
        android:nextFocusLeft="@+id/floatingActionButton1"
        android:nextFocusRight="@+id/floatingActionButton1"
        android:nextFocusUp="@+id/buttonStartId"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusDown="@+id/chronometerId"
        android:nextFocusLeft="@+id/floatingActionButton4"
        android:nextFocusRight="@+id/floatingActionButton2"
        android:nextFocusUp="@+id/textViewMathQuestionId"
        android:translationZ="6dp"
        app:backgroundTint="@color/colorPurple"
        app:elevation="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton2"
        app:layout_constraintRight_toLeftOf="@+id/floatingActionButton2"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton2"
        app:rippleColor="@color/colorWhite" />

    <TextView
        android:id="@+id/textFabButton1Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:elevation="7dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton1"
        app:layout_constraintLeft_toLeftOf="@+id/floatingActionButton1"
        app:layout_constraintRight_toRightOf="@+id/floatingActionButton1"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusDown="@+id/chronometerId"
        android:nextFocusLeft="@+id/floatingActionButton1"
        android:nextFocusRight="@+id/floatingActionButton3"
        android:nextFocusUp="@+id/textViewMathQuestionId"
        android:translationZ="6dp"
        app:backgroundTint="@color/colorPurple"
        app:elevation="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton3"
        app:rippleColor="@color/colorWhite" />

    <TextView
        android:id="@+id/textFabButton2Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:elevation="7dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton2"
        app:layout_constraintLeft_toLeftOf="@+id/floatingActionButton2"
        app:layout_constraintRight_toRightOf="@+id/floatingActionButton2"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusDown="@+id/chronometerId"
        android:nextFocusLeft="@+id/floatingActionButton2"
        android:nextFocusRight="@+id/floatingActionButton4"
        android:nextFocusUp="@+id/textViewMathQuestionId"
        android:translationZ="6dp"
        app:backgroundTint="@color/colorPurple"
        app:elevation="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton4"
        app:rippleColor="@color/colorWhite" />

    <TextView
        android:id="@+id/textFabButton3Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:elevation="7dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton3"
        app:layout_constraintLeft_toLeftOf="@+id/floatingActionButton3"
        app:layout_constraintRight_toRightOf="@+id/floatingActionButton3"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton3" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusDown="@+id/chronometerId"
        android:nextFocusLeft="@+id/floatingActionButton3"
        android:nextFocusRight="@+id/floatingActionButton1"
        android:nextFocusUp="@+id/textViewMathQuestionId"
        android:translationZ="6dp"
        app:backgroundTint="@color/colorPurple"
        app:elevation="0dp"
        app:fabSize="normal"
        app:layout_constraintLeft_toRightOf="@+id/floatingActionButton3"
        app:layout_constraintTop_toBottomOf="@+id/textViewMathQuestionId"
        app:rippleColor="@color/colorWhite" />

    <TextView
        android:id="@+id/textFabButton4Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:elevation="7dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton4"
        app:layout_constraintLeft_toLeftOf="@+id/floatingActionButton4"
        app:layout_constraintRight_toRightOf="@+id/floatingActionButton4"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton4" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/buttonStartId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/colorfabbuttondayactivity"
        android:contentDescription="@string/content_description_start"
        android:elevation="2dp"
        android:focusable="true"
        android:nextFocusDown="@+id/textViewMathQuestionId"
        android:nextFocusLeft="@+id/textViewMathQuestionId"
        android:nextFocusRight="@+id/textViewMathQuestionId"
        android:nextFocusUp="@+id/textViewDescriptionExerId"
        android:text="@string/start"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonPerformanceMathId"
        app:layout_constraintEnd_toEndOf="parent" />

    <Chronometer
        android:id="@+id/chronometerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:focusable="true"
        android:nextFocusDown="@+id/buttonPerformanceMathId"
        android:nextFocusLeft="@+id/buttonPerformanceMathId"
        android:nextFocusRight="@+id/buttonPerformanceMathId"
        android:nextFocusUp="@+id/floatingActionButton1"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewMathQuestionId"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPerformanceMathId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorfabbuttondayactivity"
        android:contentDescription="@string/content_description_look_performance"
        android:elevation="2dp"
        android:focusable="true"
        android:nextFocusDown="@id/textViewSubtitleId"
        android:nextFocusUp="@+id/chronometerId"
        android:paddingEnd="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingStart="6dp"
        android:text="@string/performance"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

</android.support.constraint.ConstraintLayout>