<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid
                android:color="@color/circle_selection_press_solid"/>
            <stroke
                android:width="@dimen/circle_selection_2dp"
                android:color="@color/circle_selection_press_solid"/>
            <size
                android:width="@dimen/circle_selection_24dp"
                android:height="@dimen/circle_selection_24dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/circle_selection_press_focus"/>
            <size
                android:width="@dimen/circle_selection_24dp"
                android:height="@dimen/circle_selection_24dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="@dimen/circle_selection_2dp"
                android:color="@color/circle_selection_press_shape"/>
            <size
                android:width="@dimen/circle_selection_24dp"
                android:height="@dimen/circle_selection_24dp" />
        </shape>
    </item>
</selector>
